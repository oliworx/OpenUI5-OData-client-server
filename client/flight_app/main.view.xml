<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="flight_app.main" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="FlÃ¼ge">
		<content>

			<Table id="fligtsTable" items="{/Sflights/d/results}" growing="true" growingScrollToLOad="true">
				<columns>
					<Column>
						<Text text="Airline ID" />
					</Column>
					<Column>
						<Text text="CONNID" />
					</Column>
					<Column>
						<Text text="FLDATE" />
					</Column>
					<Column>
						<Text text="PRICE" />
					</Column>
					<Column>
						<Text text="Currency" />
					</Column>
					<Column>
						<Text text="Plane Type" />
					</Column>
					<Column>
						<Text text="Max Seats" />
					</Column>
					<Column>
						<Text text="Booked Seats" />
					</Column>
					<Column>
						<Text text="Payment Sum" />
					</Column>
				</columns>

				<items>
					<ColumnListItem>
						<cells>
							<Text text="{CARRID}" />
							<Text text="{CONNID}" />
							<Text text="{
								path: 'FLDATE',
								type: 'sap.ui.model.type.DateTime',
								formatOptions: {
									style: 'short'
									}
							}" />
							<Text text="{
								path:'PRICE',
								type:'sap.ui.model.type.Float',
								formatOptions: {
									maxFractionDigits: 2,
									minFractionDigits: 2
								}
							}" />
							<Text text="{CURRENCY}" />
							<Text text="{PLANETYPE}" />
							<Text text="{SEATSMAX}" />
							<Text text="{SEATSOCC}" />
							<Text text="{
								path:'PAYMENTSUM',
								type:'sap.ui.model.type.Float',
								formatOptions: {
									maxFractionDigits: 2,
									minFractionDigits: 2
								}
							}" />
						</cells>
					</ColumnListItem>

				</items>
			</Table>

		</content>
		<footer>
			<Bar>
			  <contentLeft>
			     <Button text="Neuen Datensatz anlegen" type="Accept" press="createPopup"/>
			  </contentLeft>
			</Bar>
		</footer>
	</Page>
</core:View>
